{
	"name": "sybex-oracle-sdk",
	"version": "0.1.2",
	"description": "SybexOracle SDK for TypeScript/JavaScript",
	"main": "dist/index.js",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		},
		"./package.json": "./package.json"
	},
	"files": [
		"dist",
		"README.md"
	],
	"keywords": [
		"oracle",
		"blockchain",
		"bsc",
		"viem",
		"typescript",
		"web3"
	],
	"author": "SybexOracle Team",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/sybexoracle/sdk"
	},
	"bugs": {
		"url": "https://github.com/sybexoracle/sdk/issues"
	},
	"homepage": "https://sybex.app",
	"devDependencies": {
		"@biomejs/biome": "2.3.8",
		"@types/bun": "latest",
		"typescript": "^5"
	},
	"peerDependencies": {
		"viem": "^2.41.2"
	},
	"dependencies": {
		"viem": "^2.41.2"
	},
	"scripts": {
		"build": "bun run build:lib && bun run build:types",
		"build:lib": "bun build src/index.ts --outdir dist --target bun",
		"build:types": "cp -r src/types dist/ 2>/dev/null || true && tsc -p tsconfig.build.json",
		"build:node": "bun build src/index.ts --outdir dist --target node && bun run build:types",
		"dev": "bun --watch src/index.ts",
		"typecheck": "tsc --noEmit",
		"format": "biome format",
		"lint": "biome lint",
		"lint:fix": "biome check --fix",
		"clean": "rm -rf dist",
		"prepublishOnly": "npm run clean && npm run build"
	},
	"publishConfig": {
		"access": "public"
	}
}
